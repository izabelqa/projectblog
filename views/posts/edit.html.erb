<h2>Edit Post</h2>

<%= form_with(model: @post, local: true, method: :patch) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, value: @post.title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, value: @post.description %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :tags %><br />
    <%= form.text_field :tag_names, id: "post_tag_names", value: @post.tags.map(&:name).join(', ') %>
  </div>

  <div class="field">
    <%= form.label :public %>
    <%= form.check_box :public, checked: @post.public %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
